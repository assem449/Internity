{
  "manifest_version": 3,
  "name": "Internity",
  "version": "0.1.0",
  "description": "Tracks job interactions on LinkedIn job pages.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Internship Tracker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*",
      "https://www.linkedin.com/jobs/view/*",
      "https://www.linkedin.com/jobs/view/*/*"
       ],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ]
}
